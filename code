#include<stdio.h>
int main()
{
    int b[30],p[30],w[30],tat[30],p[30],i,j,n,total=0,pos,temp,avg_w,avg_tat;
    printf("Enter Total Number of Process:");
    scanf("%d",&n);
    printf("\nEnter Burst Time and Priority\n");
    for(i=0;i<n;i++)
    {
        printf("\nP[%d]\n",i+1);
        printf("Burst Time:");
        scanf("%d",&b[i]);
        printf("Priority:");
        scanf("%d",&p[i]);
        p[i]=i+1;  //contains process number
    }
    for(i=0;i<n;i++)
    {
        pos=i;
        for(j=i+1;j<n;j++)
        {
            if(p[j]<p[pos])
                pos=j;
        }
        temp=p[i];
        p[i]=p[pos];
        p[pos]=temp;
 
        temp=b[i];
        b[i]=b[pos];
        b[pos]=temp;
 
        temp=p[i];
        p[i]=p[pos];
        p[pos]=temp;
    }
     w[0]=0; //waiting time for first process is zero
 
    //calculate waiting time
    for(i=1;i<n;i++)
    {
        w[i]=0;
        for(j=0;j<i;j++)
            w[i]+=b[j];
 
        total+=w[i];
    }
  avg_w=total/n;      //total average waiting time
    total=0;
 
    printf("\nProcess\t    Burst Time    \tWaiting Time\tTurnaround Time");
    for(i=0;i<n;i++)
    {
        tat[i]=b[i]+w[i];     //calculate turnaround time
        total+=tat[i];
        printf("\nP[%d]\t\t  %d\t\t    %d\t\t\t%d",p[i],b[i],w[i],tat[i]);
    }
 
    avg_tat=total/n; //average turnaround time
    printf("\n\nAverage Waiting Time is =%d",avg_w);
    printf("\nAverage Turnaround Time is =%d\n",avg_tat);
 
    return 0;
}
